<link rel='stylesheet' href='/styles.css' />
<html>
  <head>
    <title>FunkoFever</title>
    <link rel='stylesheet' href='/styles.css' />
  </head>
  <body>
    <header>
      <nav class='nav-menu'>
        <a href='/'>Home</a>
        <a href='/cart'>Cart</a>
        <a href='/login'>Login</a>
        <a href='/signup'>Signup</a>
      </nav>
      <img
        src='/image/FunkoFever.png'
        alt='FunkoFever Logo'
        class='logo-image'
      />
      <section class='Search'>
        <form class='search-form' action='/search' method='GET'>
          <input type='text' name='query' placeholder='Search...' required />
          <button type='submit'>Search</button>
        </form>
      </section>
    </header>
<div class='container'>
  <div class='login-card'>
    <h2 class='page-title'>Login</h2>
    <form class='form login-form'>
      <div class='form-group'>
        <label for='email-login'>Email:</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password:</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Login</button>
      </div>
    </form>
  </div>
  <div class='login-card'>
    <h2 class='page-title'>Signup</h2>
    <form class='form signup-form'>
      <div class='form-group'>
        <label for='username-signup'>Username:</label>
        <input class='form-input' type='text' id='username-signup' />
      </div>
      <div class='form-group'>
        <label for='email-signup'>Email:</label>
        <input class='form-input' type='text' id='email-signup' />
      </div>
      <div class='form-group'>
        <label for='password-signup'>Password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Signup</button>
      </div>
    </form>
  </div>
</div>


<a href='/'>Home</a>
<script src='./js/login.js'></script>