<div class="cart">
  <h2>Shopping Cart</h2>
  <ul>
    {{#each cart}}
    <li>
      <span>{{cart.name}}</span>
      <span>Quantity: {{cart.quantity}}</span>
      <span>Price: ${{cart.price}}</span>
      <button class="remove-item" data-id="{{id}}">Remove</button>
    </li>
    {{/each}}
  </ul>
  <p>Total: ${{total}}</p>
</div>
